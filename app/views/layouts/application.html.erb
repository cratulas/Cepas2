<!DOCTYPE html>
<html>
  <head>
    <title>Cepas2</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <p class="notice"><%= notice %></p>
    <p class="alert"><%= alert %></p>

    <nav class="menu">

      <ul>
        <% if user_signed_in? %>
          <li><%= link_to('Wines', root_path) %></li>
          <li><%= link_to('Strains', strains_path) %></li>
          <li><%= link_to('Oenologists', oenologists_path) %></li>
          <li><%= link_to('Edit registration', edit_user_registration_path) %></li>
          <li><%= link_to('Logout', destroy_user_session_path, :method => :delete) %></li>        

        <% else %>
          <%= link_to('Wines', root_path) %>
          <%= link_to('Strains', strains_path) %>
          <%= link_to('Oenologists', oenologists_path) %>
          <li><%= link_to('Register', new_user_registration_path)%></li>
          <li><%= link_to('Login', new_user_session_path)  %></li>  

        <% end %>
      </ul>
    </nav>
    <%= yield %>
  </body>
</html>
