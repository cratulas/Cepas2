<h1>Wines</h1>
<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Strains and Percent %</th>
      <th>Score of winemakers</th>
      <th>Oenologist</th>    
      <th colspan="3"></th>
  
    </tr>
  </thead>

  <tbody>
    <% @wines.each do |wine| %>
      <tr>
        <td><%= wine.name %></td>
        <td><%= wine.assembly_percent%> </td>
        <td><%= wine.score%> </td>
        <td><%= wine.oenologist.map(&:name).join(' , ') %></td>
        
  

      <% if current_user.admin == true%>
          <td><%= link_to 'Show', wine %></td>
          <td><%= link_to 'Edit', edit_wine_path(wine) %></td>
          <td><%= link_to 'Destroy', wine, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

